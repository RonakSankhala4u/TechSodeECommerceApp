@model TechSodeECommerceApp.ViewModels.RoleMappingViewModel

@{
    ViewData["Title"] = "Role Mapping";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="RoleMapping" method="post">
    <div class="form-group">
        <label for="SelectedUserId">Select User:</label>
        <select asp-for="SelectedUserId" asp-items="Model.Users" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="SelectedRoleId">Select Role:</label>
        <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Map Role</button>
</form>
